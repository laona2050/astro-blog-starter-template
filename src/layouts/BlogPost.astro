---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="zh-CN">
	<head>
		<BaseHead title={title} description={description} />
		<link href="https://fonts.googleapis.com/css2?family=Noto+Sans+SC:wght@300;400;500;600;700&family=Playfair+Display:ital,wght@0,400;0,600;0,700;1,400&display=swap" rel="stylesheet" />
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
		<style>
			.article-header {
				background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
				padding: 3rem 1.5rem;
				margin: 0 -1.5rem 2rem;
			}
			
			@media (max-width: 768px) {
				.article-header {
					margin: 0 -1rem 2rem;
					padding: 2rem 1rem;
				}
			}
			
			.header-content {
				max-width: 800px;
				margin: 0 auto;
			}
			
			.breadcrumb {
				display: flex;
				align-items: center;
				gap: 0.75rem;
				margin-bottom: 1.5rem;
				font-size: 0.875rem;
			}
			
			.breadcrumb a {
				color: rgba(255, 255, 255, 0.8);
				text-decoration: none;
			}
			
			.breadcrumb a:hover {
				color: white;
			}
			
			.breadcrumb .separator {
				color: rgba(255, 255, 255, 0.5);
			}
			
			.breadcrumb span {
				color: rgba(255, 255, 255, 0.9);
			}
			
			.article-title {
				color: white;
				font-size: 2rem;
				margin: 0 0 1rem 0;
				line-height: 1.3;
				font-family: 'Noto Sans SC', sans-serif;
			}
			
			@media (min-width: 768px) {
				.article-title {
					font-size: 2.5rem;
				}
			}
			
			.article-meta {
				display: flex;
				align-items: center;
				gap: 1.5rem;
				flex-wrap: wrap;
				color: rgba(255, 255, 255, 0.8);
				font-size: 0.9rem;
			}
			
			.meta-item {
				display: flex;
				align-items: center;
				gap: 0.5rem;
			}
			
			.meta-item i {
				color: var(--accent);
			}
			
			.updated-date {
				font-style: italic;
				opacity: 0.8;
			}
			
			/* Hero Image */
			.hero-image {
				max-width: 900px;
				margin: -1rem auto 2rem;
				padding: 0 1.5rem;
			}
			
			.hero-image img {
				width: 100%;
				border-radius: 16px;
				box-shadow: var(--shadow-lg);
			}
			
			/* Article Content */
			.article-wrapper {
				max-width: 800px;
				margin: 0 auto;
				padding: 0 1.5rem;
			}
			
			@media (max-width: 768px) {
				.article-wrapper {
					padding: 0 1rem;
				}
			}
			
			.prose {
				font-size: 1.05rem;
				line-height: 1.9;
				color: rgb(var(--gray-dark));
			}
			
			.prose p {
				margin-bottom: 1.5em;
			}
			
			.prose h2 {
				font-size: 1.75rem;
				margin-top: 2.5rem;
				margin-bottom: 1rem;
				padding-bottom: 0.5rem;
				border-bottom: 2px solid var(--accent);
				display: inline-block;
			}
			
			.prose h3 {
				font-size: 1.375rem;
				margin-top: 2rem;
				margin-bottom: 0.75rem;
			}
			
			.prose ul, .prose ol {
				margin-bottom: 1.5em;
				padding-left: 1.5em;
			}
			
			.prose li {
				margin-bottom: 0.5em;
			}
			
			.prose img {
				border-radius: 12px;
				box-shadow: var(--shadow-md);
				margin: 1.5rem 0;
			}
			
			/* Article Footer */
			.article-footer {
				margin-top: 4rem;
				padding-top: 2rem;
				border-top: 1px solid rgb(var(--gray-light));
			}
			
			.back-link {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				padding: 0.75rem 1.25rem;
				background: var(--wave-blue);
				color: var(--primary);
				border-radius: 8px;
				font-weight: 500;
				text-decoration: none;
				transition: all 0.2s;
			}
			
			.back-link:hover {
				background: var(--primary);
				color: white;
			}
		</style>
	</head>

	<body>
		<Header />
		
		<main>
			<article>
				<header class="article-header">
					<div class="header-content">
						<nav class="breadcrumb">
							<a href="/"><i class="fas fa-home"></i> 首页</a>
							<span class="separator">/</span>
							<a href="/blog">文章列表</a>
							<span class="separator">/</span>
							<span>正文</span>
						</nav>
						
						<h1 class="article-title">{title}</h1>
						
						<div class="article-meta">
							<span class="meta-item">
								<i class="far fa-calendar"></i>
								发表于 <FormattedDate date={pubDate} />
							</span>
							{
								updatedDate && (
									<span class="meta-item updated-date">
										<i class="fas fa-sync-alt"></i>
										更新于 <FormattedDate date={updatedDate} />
									</span>
								)
							}
						</div>
					</div>
				</header>
				
				{
					heroImage && (
						<div class="hero-image">
							<img src={heroImage} alt={title} />
						</div>
					)
				}
				
				<div class="article-wrapper">
					<div class="prose">
						<slot />
					</div>
					
					<footer class="article-footer">
						<a href="/blog" class="back-link">
							<i class="fas fa-arrow-left"></i>
							返回文章列表
						</a>
					</footer>
				</div>
			</article>
		</main>
		
		<Footer />
	</body>
</html>
