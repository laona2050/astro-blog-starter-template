---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const totalPosts = posts.length;
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<BaseHead title={`文章列表 | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
		<link href="https://fonts.googleapis.com/css2?family=Noto+Sans+SC:wght@300;400;500;600;700&family=Playfair+Display:ital,wght@0,400;0,600;0,700;1,400&display=swap" rel="stylesheet" />
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
	</head>
	<body>
		<Header />
		
		<main>
			<!-- Page Header -->
			<section class="page-header">
				<div class="header-content">
					<div class="breadcrumb">
						<a href="/"><i class="fas fa-home"></i></a>
						<span class="separator">/</span>
						<span>文章列表</span>
					</div>
					<h1>文章列表</h1>
					<p class="subtitle">共收录 {totalPosts} 篇航海探索文章</p>
				</div>
			</section>
			
			<!-- Posts List -->
			<section class="posts-section">
				<div class="posts-container">
					{
						posts.map((post, index) => (
							<article class="post-item" style={`--delay: ${index * 0.05}s`}>
								<div class="post-marker">
									<div class="marker-dot"></div>
									<div class="marker-line"></div>
								</div>
								<a href={`/blog/${post.id}/`} class="post-content">
									<div class="post-main">
										<h2 class="post-title">{post.data.title}</h2>
										<p class="post-description">
											{post.data.description || '点击查看详情...'}
										</p>
									</div>
									<div class="post-meta">
										<span class="meta-item">
											<i class="far fa-calendar-alt"></i>
											<FormattedDate date={post.data.pubDate} />
										</span>
										<span class="meta-item read-hint">
											阅读全文 <i class="fas fa-chevron-right"></i>
										</span>
									</div>
								</a>
							</article>
						))
					}
				</div>
				
				<div class="posts-end">
					<div class="end-icon"><i class="fas fa-anchor"></i></div>
					<p>已展示全部 {totalPosts} 篇文章</p>
				</div>
			</section>
		</main>
		
		<Footer />
	</body>
</html>

<style>
	.page-header {
		padding: 3rem 0 2rem;
		background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
		margin: 0 -1.5rem 2rem;
		padding-left: 1.5rem;
		padding-right: 1.5rem;
	}
	
	@media (max-width: 768px) {
		.page-header {
			margin: 0 -1rem 2rem;
			padding-left: 1rem;
			padding-right: 1rem;
		}
	}
	
	.header-content {
		max-width: 1200px;
		margin: 0 auto;
	}
	
	.breadcrumb {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		margin-bottom: 1rem;
		font-size: 0.875rem;
	}
	
	.breadcrumb a {
		color: rgba(255, 255, 255, 0.8);
		text-decoration: none;
		transition: color 0.2s;
	}
	
	.breadcrumb a:hover {
		color: white;
	}
	
	.breadcrumb .separator {
		color: rgba(255, 255, 255, 0.5);
	}
	
	.breadcrumb span:last-child {
		color: white;
		font-weight: 500;
	}
	
	.page-header h1 {
		color: white;
		font-size: 2.5rem;
		margin: 0 0 0.5rem 0;
		font-family: 'Noto Sans SC', sans-serif;
	}
	
	.subtitle {
		color: rgba(255, 255, 255, 0.8);
		margin: 0;
		font-size: 1rem;
	}
	
	/* Posts Section */
	.posts-section {
		padding: 1rem 0 3rem;
	}
	
	.posts-container {
		max-width: 800px;
		margin: 0 auto;
	}
	
	.post-item {
		display: flex;
		gap: 1.5rem;
		margin-bottom: 0;
		opacity: 0;
		animation: slideIn 0.4s ease forwards;
		animation-delay: var(--delay, 0s);
	}
	
	@keyframes slideIn {
		from {
			opacity: 0;
			transform: translateX(-20px);
		}
		to {
			opacity: 1;
			transform: translateX(0);
		}
	}
	
	.post-marker {
		display: flex;
		flex-direction: column;
		align-items: center;
		flex-shrink: 0;
		padding-top: 0.5rem;
	}
	
	.marker-dot {
		width: 12px;
		height: 12px;
		border-radius: 50%;
		background: var(--accent);
		border: 3px solid var(--white);
		box-shadow: 0 0 0 2px var(--accent);
	}
	
	.marker-line {
		flex-grow: 1;
		width: 2px;
		background: linear-gradient(to bottom, var(--accent), transparent);
		min-height: 60px;
	}
	
	.post-item:last-child .marker-line {
		display: none;
	}
	
	.post-content {
		flex-grow: 1;
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
		padding: 1.25rem;
		background: var(--white);
		border-radius: 12px;
		box-shadow: var(--shadow-sm);
		margin-bottom: 1.5rem;
		text-decoration: none;
		color: inherit;
		transition: all 0.2s ease;
	}
	
	.post-content:hover {
		box-shadow: var(--shadow-md);
		transform: translateX(4px);
	}
	
	.post-main {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}
	
	.post-title {
		font-size: 1.125rem;
		font-weight: 600;
		color: var(--primary);
		margin: 0;
		line-height: 1.4;
		transition: color 0.2s;
	}
	
	.post-content:hover .post-title {
		color: var(--primary-light);
	}
	
	.post-description {
		font-size: 0.9rem;
		color: rgb(var(--gray));
		margin: 0;
		line-height: 1.6;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}
	
	.post-meta {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding-top: 0.75rem;
		border-top: 1px solid rgb(var(--gray-light));
	}
	
	.meta-item {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		font-size: 0.8rem;
		color: rgb(var(--gray));
	}
	
	.meta-item i {
		color: var(--accent);
	}
	
	.read-hint {
		color: var(--primary);
		font-weight: 500;
		opacity: 0;
		transition: opacity 0.2s;
	}
	
	.post-content:hover .read-hint {
		opacity: 1;
	}
	
	/* Posts End */
	.posts-end {
		text-align: center;
		padding: 3rem 0;
		color: rgb(var(--gray));
	}
	
	.end-icon {
		font-size: 2rem;
		color: var(--accent);
		margin-bottom: 0.5rem;
	}
	
	.posts-end p {
		margin: 0;
		font-size: 0.9rem;
	}
	
	@media (max-width: 640px) {
		.page-header h1 {
			font-size: 1.875rem;
		}
		
		.post-item {
			gap: 1rem;
		}
		
		.marker-line {
			min-height: 40px;
		}
		
		.read-hint {
			display: none;
		}
	}
</style>
