<style>
	/* Hero Section */
	.hero {
		position: relative;
		padding: 4rem 0 6rem;
		overflow: hidden;
	}
	
	.hero-content {
		position: relative;
		z-index: 2;
		text-align: center;
		max-width: 800px;
		margin: 0 auto;
	}
	
	.hero-badge {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.5rem 1rem;
		background: var(--wave-blue);
		color: var(--primary);
		border-radius: 50px;
		font-size: 0.875rem;
		font-weight: 500;
		margin-bottom: 1.5rem;
	}
	
	.hero-badge i {
		color: var(--accent);
	}
	
	.hero-title {
		font-size: 3rem;
		font-weight: 700;
		margin-bottom: 1rem;
		line-height: 1.2;
		font-family: 'Noto Sans SC', sans-serif;
	}
	
	.hero-title .highlight {
		background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 50%, var(--accent) 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		font-family: 'Playfair Display', serif;
	}
	
	@media (max-width: 768px) {
		.hero-title {
			font-size: 2rem;
		}
	}
	
	.hero-description {
		font-size: 1.125rem;
		color: rgb(var(--gray));
		max-width: 600px;
		margin: 0 auto 2rem;
		line-height: 1.8;
	}
	
	.hero-stats {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 2rem;
		margin-bottom: 2rem;
	}
	
	@media (max-width: 640px) {
		.hero-stats {
			gap: 1rem;
		}
	}
	
	.stat {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 0.25rem;
	}
	
	.stat-number {
		font-size: 1.75rem;
		font-weight: 700;
		color: var(--primary);
	}
	
	.stat-label {
		font-size: 0.875rem;
		color: rgb(var(--gray));
	}
	
	.stat-divider {
		width: 1px;
		height: 40px;
		background: rgb(var(--gray-light));
	}
	
	.hero-actions {
		display: flex;
		justify-content: center;
		gap: 1rem;
		flex-wrap: wrap;
	}
	
	.hero-visual {
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		z-index: 1;
	}
	
	.wave-decoration {
		position: absolute;
		bottom: -1px;
		left: 0;
		right: 0;
	}
	
	.wave {
		display: block;
		width: 100%;
		height: auto;
	}
	
	/* Featured Section */
	.featured-section {
		padding: 3rem 0 4rem;
	}
	
	.section-header {
		text-align: center;
		margin-bottom: 3rem;
	}
	
	.section-tag {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.5rem 1rem;
		background: var(--wave-blue);
		color: var(--primary);
		border-radius: 50px;
		font-size: 0.875rem;
		font-weight: 500;
		margin-bottom: 1rem;
	}
	
	.section-tag i {
		color: var(--accent);
	}
	
	.section-header h2 {
		font-size: 2rem;
		color: var(--primary);
		margin: 0;
	}
	
	/* Posts Grid */
	.posts-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
		gap: 1.5rem;
		margin-bottom: 3rem;
	}
	
	@media (max-width: 640px) {
		.posts-grid {
			grid-template-columns: 1fr;
		}
	}
	
	.post-card {
		background: var(--white);
		border-radius: 16px;
		box-shadow: var(--shadow-md);
		overflow: hidden;
		transition: all 0.3s ease;
		opacity: 0;
		animation: fadeInUp 0.6s ease forwards;
		animation-delay: var(--delay, 0s);
	}
	
	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}
	
	.post-card:hover {
		box-shadow: var(--shadow-xl);
		transform: translateY(-4px);
	}
	
	.post-link {
		display: block;
		text-decoration: none;
		color: inherit;
		padding: 1.5rem;
		height: 100%;
	}
	
	.post-content {
		display: flex;
		flex-direction: column;
		height: 100%;
	}
	
	.post-meta {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		margin-bottom: 0.75rem;
	}
	
	.post-date {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		font-size: 0.8rem;
		color: rgb(var(--gray));
	}
	
	.post-date i {
		color: var(--accent);
	}
	
	.post-title {
		font-size: 1.125rem;
		font-weight: 600;
		color: var(--primary);
		margin: 0 0 0.75rem 0;
		line-height: 1.4;
		transition: color 0.2s;
	}
	
	.post-card:hover .post-title {
		color: var(--primary-light);
	}
	
	.post-excerpt {
		font-size: 0.9rem;
		color: rgb(var(--gray));
		margin: 0 0 1rem 0;
		line-height: 1.6;
		flex-grow: 1;
	}
	
	.post-footer {
		margin-top: auto;
	}
	
	.read-more {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		font-size: 0.875rem;
		font-weight: 500;
		color: var(--primary);
		transition: gap 0.2s;
	}
	
	.post-card:hover .read-more {
		gap: 0.75rem;
		color: var(--accent);
	}
	
	.section-footer {
		text-align: center;
	}
</style>
