<style>
	/* Page Header */
	.page-header {
		padding: 3rem 0 2rem;
		background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
		margin: 0 -1.5rem 3rem;
		padding-left: 1.5rem;
		padding-right: 1.5rem;
	}
	
	@media (max-width: 768px) {
		.page-header {
			margin: 0 -1rem 2rem;
			padding-left: 1rem;
			padding-right: 1rem;
		}
	}
	
	.header-content {
		max-width: 1200px;
		margin: 0 auto;
	}
	
	.breadcrumb {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		margin-bottom: 1rem;
		font-size: 0.875rem;
	}
	
	.breadcrumb a {
		color: rgba(255, 255, 255, 0.8);
		text-decoration: none;
		transition: color 0.2s;
	}
	
	.breadcrumb a:hover {
		color: white;
	}
	
	.breadcrumb .separator {
		color: rgba(255, 255, 255, 0.5);
	}
	
	.breadcrumb span:last-child {
		color: white;
		font-weight: 500;
	}
	
	.page-header h1 {
		color: white;
		font-size: 2.5rem;
		margin: 0;
		font-family: 'Noto Sans SC', sans-serif;
	}
	
	/* About Section */
	.about-section {
		padding: 0 0 4rem;
	}
	
	.about-grid {
		display: grid;
		grid-template-columns: 300px 1fr;
		gap: 3rem;
		max-width: 1000px;
		margin: 0 auto;
	}
	
	@media (max-width: 768px) {
		.about-grid {
			grid-template-columns: 1fr;
			gap: 2rem;
		}
	}
	
	/* Profile Card */
	.profile-card {
		background: var(--white);
		border-radius: 20px;
		padding: 2rem;
		text-align: center;
		box-shadow: var(--shadow-md);
		height: fit-content;
		position: sticky;
		top: 100px;
	}
	
	@media (max-width: 768px) {
		.profile-card {
			position: static;
		}
	}
	
	.profile-image {
		position: relative;
		width: 120px;
		height: 120px;
		margin: 0 auto 1.5rem;
	}
	
	.profile-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		border-radius: 50%;
		border: 4px solid var(--accent);
	}
	
	.profile-badge {
		position: absolute;
		bottom: 0;
		right: 0;
		width: 36px;
		height: 36px;
		background: var(--primary);
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		color: white;
		border: 3px solid var(--white);
	}
	
	.profile-card h2 {
		font-size: 1.5rem;
		margin: 0 0 0.5rem;
		color: var(--primary);
	}
	
	.profile-tagline {
		color: rgb(var(--gray));
		margin: 0 0 1.5rem;
		font-size: 0.9rem;
	}
	
	.profile-social {
		display: flex;
		justify-content: center;
		gap: 0.75rem;
	}
	
	.social-btn {
		width: 40px;
		height: 40px;
		border-radius: 50%;
		background: var(--wave-blue);
		color: var(--primary);
		display: flex;
		align-items: center;
		justify-content: center;
		text-decoration: none;
		transition: all 0.2s;
	}
	
	.social-btn:hover {
		background: var(--primary);
		color: white;
		transform: translateY(-2px);
	}
	
	/* About Content */
	.about-content {
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}
	
	.content-block {
		background: var(--white);
		border-radius: 16px;
		padding: 2rem;
		box-shadow: var(--shadow-sm);
	}
	
	.content-block h3 {
		font-size: 1.25rem;
		color: var(--primary);
		margin: 0 0 1rem;
		display: flex;
		align-items: center;
		gap: 0.75rem;
	}
	
	.content-block h3 i {
		color: var(--accent);
	}
	
	.content-block p {
		color: rgb(var(--gray-dark));
		line-height: 1.8;
		margin: 0;
	}
	
	.feature-list {
		list-style: none;
		padding: 0;
		margin: 0;
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}
	
	.feature-list li {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		color: rgb(var(--gray-dark));
	}
	
	.feature-list i {
		color: var(--accent);
		width: 20px;
	}
	
	.contact-links {
		display: flex;
		flex-wrap: wrap;
		gap: 1rem;
		margin-top: 1.5rem;
	}
	
	.contact-btn {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.75rem 1.25rem;
		background: var(--wave-blue);
		color: var(--primary);
		border-radius: 8px;
		text-decoration: none;
		font-weight: 500;
		transition: all 0.2s;
	}
	
	.contact-btn:hover {
		background: var(--primary);
		color: white;
	}
	
	@media (max-width: 640px) {
		.page-header h1 {
			font-size: 1.875rem;
		}
		
		.content-block {
			padding: 1.5rem;
		}
		
		.contact-links {
			flex-direction: column;
		}
	}
</style>
